
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Should you live in Fresno?"  />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes." />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No." />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maybe" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Should you jump off a plane?" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yes." />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to take this quiz?" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="STOP" />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="STOP" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to take this quiz?" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="STOP" />
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="STOP" />

    </LinearLayout>


</ScrollView>
